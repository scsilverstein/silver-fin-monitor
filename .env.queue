# Queue Worker Configuration

# Optimal for your system (MacBook Pro with 10 cores, 32GB RAM)
JOB_CONCURRENCY=10

# Queue polling and cleanup
QUEUE_POLL_INTERVAL=2000
QUEUE_CLEANUP_INTERVAL=300000
MAX_RETRY_ATTEMPTS=3

# Job-specific timeouts
FEED_FETCH_TIMEOUT=30000        # 30 seconds
PREDICTION_TIMEOUT=120000       # 2 minutes (OpenAI can be slow)
ANALYSIS_TIMEOUT=300000         # 5 minutes
DEFAULT_JOB_TIMEOUT=60000       # 1 minute

# Rate limiting for external APIs
OPENAI_MAX_CONCURRENT=2         # Don't overwhelm OpenAI
FEED_MAX_CONCURRENT=3           # Respect feed sources
TRANSCRIPTION_MAX_CONCURRENT=1  # Whisper is resource intensive

# Database connection pool
DB_POOL_MIN=5
DB_POOL_MAX=20

# Worker health
WORKER_HEALTH_CHECK_INTERVAL=30000  # 30 seconds
STUCK_JOB_THRESHOLD=180000          # 3 minutes